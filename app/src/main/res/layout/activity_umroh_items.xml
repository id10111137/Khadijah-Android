<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/id_ly_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite">

            <TextView
                android:id="@+id/id_title_umroh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Umroh Bersama"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id_image_umroh_close"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="right"
        android:layout_marginTop="-30dp"
        android:src="@drawable/avatar_3d"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_txt_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Pt.Mahhabah Al-Musyarofah"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_description_umrah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/txt_project_desc"
            android:textSize="12sp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_lr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_training"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Training : Manasik "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/id_depart_arival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_training"
            android:hint="Berangkat: 2018/09/16, Pulang : 20180924"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/id_qty_umroh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/id_depart_arival"
            android:hint="Qty : 80"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>